.naver{padding:0px 10px; background:#fff;display: box;display: -webkit-box;box-sizing: border-box;-webkit-box-pack:center; -webkit-box-align:center;border-bottom:1px solid #F6F6F6;position:fixed;top:0;left:0;z-index:10;width:100%;}
.naver view{box-flex: 1;-webkit-box-flex: 1;box-sizing:border-box; text-align:center; padding:8px 0px 5px 0px; color:#666;border-bottom:3px solid #FFF}
.naver view.on{color:#329fff; font-weight:bolder; border-bottom:3px solid #329fff}

.box{background: #FFF;padding:10px 17px 7px 17px;display: box;display: -webkit-box;box-sizing: border-box; -webkit-box-pack:left;border-bottom:1px #F6F6F6 solid;}
.box .image{flex:1;width:21.1vw;height:30vw; padding-right:10px;position: relative;}
.box .image image{width:21.1vw;height:30vw;}
.box .image .bottom{ position: absolute;bottom:0px;background: rgba(0, 0, 0, 0.7);text-align: center; color:#fff;width:21.1vw; padding: 3px 0px; font-size: small;overflow: hidden;text-overflow:ellipsis;white-space: nowrap; }
.box .image .tag{ position: absolute;top:5px; background:#329fff; font-size: x-small; padding:2px 5px;color:#fff;}
.box .txt{box-flex:1;-webkit-box-flex:1;box-sizing:border-box;font-size: small; color: darkgray;}
.box .txt view{margin-bottom:5px;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp:2;-webkit-box-orient: vertical;}
.box .txt view:first-child{color: dimgray; font-size: medium;margin-bottom:5px;}

.top{ height:40px; background:#FFF}

.ts{padding:10px 15px; background:#FFF;color: darkgray; font-size: small}
.ts view{ background:#F6F6F6; padding:5px 7px;border-radius:4px;}